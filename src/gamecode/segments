					Directory Structures

seg/gamecode
	- game code files

seg/bkgddata
	sbst	-->		subway & street code and textures
	city	-->		bank & city code and textures
	soul	-->		soul chamber & balcony code and textures
	bridge	-->		bridge code and textures
	bell	-->		bell tower code and textures
	temple	-->		temple code and textures
	grave	-->		graveyard code and textures
	pit		-->		pit code and textures
	water	-->		water code and textures
	cave	-->		hades & cave code and textures
	desert	-->		deset code and textures
	lost	-->		MK2 lost code and texture
	hport	-->		hidden portal code and textures
	dead	-->		deadpool code and textures
	battle	-->		battlefield wasteland code and textures
	arena	-->		SK arena code and textures
	armory	-->		goros lair, armory, tomb code and textures
	tree	-->		living forest code and textures
	tower	-->		sk tower code and textures
	monks	-->		outworld portal code and textures

seg/attract
	buyin	-->		buyin & mode select code and textures
	tourn	-->		tournament code and textures
	select	-->		select & ladder code and textures
	vs		-->		vs code and textures
		names....	-->	fighter portraits	code and textures
	gradient-->		gradient code and textures
	title	-->		title & legal code and textures
	options	-->		options code and textures

seg/common
	symbols	-->		briefcase symbols textures
	mugs	-->		fighter mugshots textures
	dragon	-->		spinning dragon textures
	rocks	-->		rocks and floor breaking textures
	monk	-->		monk textures
	trash	-->		trash, leafs textures
	storm	-->		spinning storm textures
	fonts	-->		fonts textures
	control	-->		control panel textures
	explode	-->		explosion textures
	animal	-->		animality animation textures
	fatal	-->		fatality animation textures
	baby	-->		babality animation textures
	friend	-->		friendship animation textures
	fight	-->		fight animation textures
	finhim	-->		finish him animation textures
	finher	-->		finish her animation textures
	mercy	-->		mercy animation textures
	blood	-->		blood and guts animation textures
	dteam	-->		dream team face textures

seg/chardata
	names....	-->	fighter data

